{
  "name": "intuitive-test-assertions",
  "version": "1.1.7",
  "description": "Intuitive Assertions",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/holyaleks/test-assertion.git"
  },
  "keywords": [
    "typescript",
    "assertion",
    "fluent assertions",
    "fluent"
  ],
  "author": "Oleksandr Holyshevskyi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/holyaleks/test-assertion/issues"
  },
  "homepage": "https://github.com/holyaleks/test-assertion#readme",
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.8",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.8.2"
  },
  "files": [
    "lib/**/*"
  ],
  "publishConfig": {
    "@holyaleks:registry": "https://npm.pkg.github.com"
  }
}
